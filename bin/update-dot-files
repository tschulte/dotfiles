#!/bin/sh
#
# update-dot-files
#
# `update-dot-files` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export ZSH=$HOME/.dotfiles

# Set defaults
$ZSH/bin/set-defaults

# Try to Install homebrew
$ZSH/homebrew/install.sh 2>&1

# Try to install dependencies using apt
$ZSH/apt/install.sh 2>&1


# if homebrew was installed
if test $(which brew)
then
  # Upgrade homebrew
  echo "› brew update"
  brew update
fi

# Install software
echo "› $ZSH/script/install"
$ZSH/script/install
