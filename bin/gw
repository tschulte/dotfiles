#!/bin/sh

# start Xvncserver for gui unit tests to not show
if test -e /usr/bin/vncserver
then
  if test ! -e /tmp/.X11-unix/X1
  then
    echo "starting xvnc"
    /usr/bin/vncserver :1 -localhost -nolisten tcp
  fi
  if test -e /tmp/.X11-unix/X1
  then
    export DISPLAY=:1
  fi
fi

nice -n 15 $(upfind -name gradlew) $*
